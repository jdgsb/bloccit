<h1><%= @question.title %></h1>

<%= link_to "Edit", edit_question_path(@question), class: 'btn btn-success' %>

<p><%= @question.body %></p>
<%= check_box_tag :resolved, :resolved, @question.resolved, disabled: true %>
<p><%= link_to "Delete", @question, method: :delete, data: { confirm: "Are you sure?" }, class: 'btn btn-success' %></p>


