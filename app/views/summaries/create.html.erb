<h1>Create Summary</h1>

<%= form_for @summary, url: topic_post_summaries_path do |f| %>
  <div class="form-group">
    <%= f.label :summary %>
    <%= f.text_field :abstract, class: 'form_control', placeholder: "Enter summary" %>
  </div>
  <div class="form-group">
    <%= f.submit "Save", class: 'btn btn-success' %>
  </div>
<% end %>